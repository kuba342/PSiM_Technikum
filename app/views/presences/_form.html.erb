<%= form_with(model: presence) do |form| %>
  <% if presence.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(presence.errors.count, "error") %> prohibited this presence from being saved:</h2>

      <ul>
        <% presence.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :isPresent, style: "display: block" %>
    <%= form.check_box :isPresent %>
  </div>

  <div>
    <%= form.label :student_id, style: "display: block" %>
    <%= form.collection_select(:student_id, Student.order(:lastname), :id, :student_infor) %>
  </div>

  <div>
    <%= form.label :lesson_id, style: "display: block" %>
    <%= form.collection_select(:lesson_id, Lesson.order(:date), :id, :lesson_infor) %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
