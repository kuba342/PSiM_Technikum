<!DOCTYPE html>
<html>
  <head>
    <title>Technikum</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if logged_in? %>
      Zalogowany jako: <%= current_user.login %>
      <%= link_to "Profil", current_user %>
      <%= link_to "Wyloguj", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Zaloguj", login_path %>
      <%= link_to "Strona główna", root_path %>
    <% end %>
    <% if logged_in? %>
    <ol>
      <li><%= link_to "Strona główna", root_path %></li>
      <li><%= link_to "Użytkownicy", users_path %></li>
      <li><%= link_to "Nauczyciele", teachers_path %></li>
      <li><%= link_to "Uczniowie", students_path %></li>
      <li><%= link_to "Klasy", class_of_students_path %></li>
      <li><%= link_to "Kursy", courses_path %></li>
      <li><%= link_to "Testy/sprawdziany", tests_path %></li>
      <li><%= link_to "Lekcje", lessons_path %></li>
      <li><%= link_to "Obecności", presences_path %></li>
      <li><%= link_to "Oceny", student_grades_path %></li>
      <li><%= link_to "Typy zwierząt", animal_types_path %></li>
      <li><%= link_to "Kody zwierząt", animals_path %></li>
      <li><%= link_to "Klasy w szkole", classrooms_path %></li>
    </ol>
    <% end %>
    <%= yield %>
  </body>
</html>
