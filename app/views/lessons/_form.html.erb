<%= form_with(model: lesson) do |form| %>
  <% if lesson.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
        <% lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date %>
  </div>

  <div>
    <%= form.label :teacher_id, style: "display: block" %>
    <%= form.collection_select(:teacher_id, Teacher.order(:lastName), :id, :name) %>
  </div>

  <div>
    <%= form.label :class_of_student_id, style: "display: block" %>
    <%= form.collection_select(:class_of_student_id, ClassOfStudent.order(:symbol), :id, :symbol)%>
  </div>

  <div>
    <%= form.label :animal_id, style: "display: block" %>
    <%= form.collection_select(:animal_id, Animal.order(:code), :id, :animal_infor)%>
  </div>

  <div>
    <%= form.label :test_id, style: "display: block" %>
    <%= form.collection_select(:test_id, Test.order(:name), :id, :name)%>
  </div>

  <div>
    <%= form.label :classroom_id, style: "display: block" %>
    <%= form.collection_select(:classroom_id, Classroom.order(:number), :id, :number)%>
  </div>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.collection_select(:course_id, Course.order(:name), :id, :name)%>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
